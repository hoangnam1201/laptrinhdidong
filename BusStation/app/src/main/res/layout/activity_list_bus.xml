<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imgHinh"/>
    <TextView
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewMaSo"
        android:text="MaSo"
        android:layout_toRightOf="@id/imgHinh"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/imgHinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewBus"
        android:text="TenTuyen"
        android:layout_below="@+id/textViewMaSo"/>

    <ImageView
        android:id="@+id/imgLike"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/textViewMaSo"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
</RelativeLayout>